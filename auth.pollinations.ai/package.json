{
    "name": "pollinations-auth",
    "version": "1.0.0",
    "description": "Next generation auth service for Pollinations",
    "main": "src/index.ts",
    "scripts": {
        "dev": "sops exec-file --no-fifo .encrypted.vars.env 'wrangler dev --env-file {}'",
        "test": "npx vitest run",
        "gen:auth-schema": "npx @better-auth/cli@latest generate --config betterAuth.config.ts --output src/db/schema/better-auth.ts",
        "gen:cf-types": "sops exec-file --no-fifo .encrypted.vars.env 'wrangler types --env-file {}'"
    },
    "dependencies": {
        "@polar-sh/better-auth": "^1.1.0",
        "@polar-sh/sdk": "^0.34.11",
        "better-auth": "^1.3.6",
        "drizzle-orm": "^0.44.4",
        "hono": "^4.9.1",
        "jose": "^5.10.0"
    },
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.8.63",
        "drizzle-kit": "^0.31.4",
        "msw": "^2.10.5",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4",
        "wrangler": "^4.28.1"
    }
}
